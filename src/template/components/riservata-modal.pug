section.modal.riservata-modal#riservata
  .modal__container.riservata-modal__container
    .riservata-modal__header
      h2.riservata-modal__title AREA RISERVATA
      button.close-modal.riservata-modal__close-modal Close
        <svg xmlns="http://www.w3.org/2000/svg" width="23" height="22" viewBox="0 0 68.9 68.3"><path d="M38.1 34.1l30-29.5c1-1 1.1-2.7.2-3.7-.9-1.1-2.4-1.2-3.4-.2L34.4 30.6 4.1.7c-1-1-2.5-.9-3.4.2-1 1.1-.9 2.7.1 3.7l30 29.5-30 29.5c-1 1-1.1 2.7-.2 3.7.9 1.1 2.4 1.2 3.4.2l30.4-29.9 30.4 29.9c.5.5 1.1.7 1.6.7.7 0 1.3-.3 1.8-.9.9-1.1.8-2.8-.2-3.7L38.1 34.1z" fill="#fff"/></svg>
    .riservata-modal__content
      .riservata-modal__left
        form.riservata-modal__form(action="")
          h3.riservata-modal__form-title ACCEDI
          .riservata-modal__input-wrap
            input.riservata-modal__input.input(type="email" name="email" placeholder="E-mail")
            input.riservata-modal__input.input(type="password" name="password" placeholder="Password")
          button.riservata-modal__button.button ACCEDI
          a.riservata-modal__forgot(href="") Password dimenticata
      .riservata-modal__right
        form.riservata-modal__form(action="")
          h3.riservata-modal__form-title REGISTRATI
          .riservata-modal__input-wrap
            input.riservata-modal__input.input(type="text" name="name" placeholder="Nome")
            input.riservata-modal__input.input(type="text" name="surname" placeholder="Cognome")
            input.riservata-modal__input.input(type="email" name="email" placeholder="Email")
            input.riservata-modal__input.input(type="password" name="password" placeholder="Password")
          .riservata-modal__checkbox-wrap
            .riservata-modal__checkbox.checkbox-group
              input.checkbox-group__checbox(type="checkbox", id="personal-data-modal" name="personal-data")
              label.checbox-group__label(for="personal-data-modal") Acconsento al trattamento dei dati
            .riservata-modal__checkbox.checkbox-group
              input.checkbox-group__checbox(type="checkbox", id="subscribe" name="subscribe")
              label.checbox-group__label(for="subscribe") Mi iscrivo alla Newsletter
          button.riservata-modal__button.button ISCRIVITI